<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="veterinaria.Detalle"
             BackgroundColor="White"
             Title="Bienvenida">
    <VerticalStackLayout Padding="20" Spacing="30">
        <!-- Imagen de bienvenida -->
        <Image Source="veterinaria_logo.jpg"
               HeightRequest="150"
               HorizontalOptions="Center" />

        <!-- Texto de bienvenida -->
        <Label Text="¡Bienvenido a Maskotas App!"
               FontSize="28"
               FontAttributes="Bold"
               TextColor="#333333"
               HorizontalOptions="Center" />

        <Label Text="Tu app de confianza para el cuidado de tus mascotas."
               FontSize="18"
               TextColor="#666666"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center" />


        <Label Text="Versión 1.0"
               FontSize="14"
               TextColor="#999999"
               HorizontalOptions="Center"
               VerticalOptions="EndAndExpand" />
    </VerticalStackLayout>
</ContentPage>
