<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="veterinaria.Maestro"
             Title="Menú"
             BackgroundColor="Blue">
    <VerticalStackLayout>

        <Button Text="Cerrar Sesión"
                Clicked="Gotologin" 
                WidthRequest="250" 
                Margin="0,20" BackgroundColor="SkyBlue"/>


        <Button Text="Registrer" 
                Clicked="Gotoregister" 
                WidthRequest="250" 
                Margin="0,20" BackgroundColor="SkyBlue"/>
        
        
        <Button Text="Perfil"
                Clicked="GotoPerfilUsuario"
                WidthRequest="250"
                Margin="0,20" BackgroundColor="SkyBlue"/>

        <Button Text="Agendar Cita"
        Clicked="GotoAgendarCita"
        WidthRequest="250"
        Margin="0,20" BackgroundColor="SkyBlue"/>


    </VerticalStackLayout>
</ContentPage>