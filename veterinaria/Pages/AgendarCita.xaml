<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="veterinaria.Pages.AgendarCita"
             Title="Agendar Cita">

    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="15">
            <!-- Seleccionar Mascota -->
            <Label Text="Seleccione Mascota" />
            <Picker x:Name="MascotaPicker" />

            <!-- Seleccionar Tipo de Servicio -->
            <Label Text="Seleccione Tipo de Servicio" />
            <Picker x:Name="TipoServicioPicker" />

            <!-- Seleccionar Fecha y Hora -->
            <Label Text="Seleccione Fecha" />
            <DatePicker x:Name="FechaPicker" />

            <Label Text="Seleccione Hora de Inicio" />
            <TimePicker x:Name="HoraInicioPicker" />

            <Label Text="Seleccione Hora de Fin" />
            <TimePicker x:Name="HoraFinPicker" />


            <!-- BotÃ³n Guardar -->
            <Button Text="Agendar Cita" Clicked="OnGuardarCitaClicked" BackgroundColor="#3b4fb2" TextColor="White" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
