<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="veterinaria.Pages.RegistrarMascota"
             Title="Registrar Mascota">

    <VerticalStackLayout Padding="20">
        <Entry x:Name="NombreEntry" Placeholder="Nombre de la Mascota" />
        <Entry x:Name="EdadEntry" Placeholder="Edad de la Mascota" Keyboard="Numeric" />
        <DatePicker x:Name="FechaNacimientoPicker" Date="{Binding FechaNacimiento}" />
        <Entry x:Name="TipoAnimalEntry" Placeholder="Tipo de Animal (e.g., Perro, Gato)" />
        <Entry x:Name="RazaAnimalEntry" Placeholder="Raza de la Mascota" />

        <!-- BotÃ³n para registrar la mascota -->
        <Button Text="Registrar Mascota" Clicked="OnRegistrarMascotaClicked" />
    </VerticalStackLayout>
</ContentPage>
